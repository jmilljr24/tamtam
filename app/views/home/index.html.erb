<% content_for :title, "Home" %>
<section class="relative bg-gray-50 py-24">
  <!-- Content Wrapper -->
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 items-center gap-12">

      <!-- TEXT BLOCK -->
      <div class="text-center lg:text-left space-y-6">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-light tracking-tight text-gray-900">
          Business Coaching for Creative Entrepreneurs
        </h1>

        <p class="text-lg text-gray-600 max-w-xl mx-auto lg:mx-0">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. 
          Vivamus eget eros in turpis euismod imperdiet.
        </p>

        <div class="pt-4">
          <%= link_to "Work With Me", "#",
              class: "inline-block px-8 py-3 bg-black text-white rounded-full hover:bg-gray-800 transition" %>
        </div>
      </div>

      <!-- IMAGE SKELETON BLOCK -->
      <div class="relative flex justify-center lg:justify-end">
        <div class="w-full max-w-md h-[400px] rounded-xl bg-gray-200 animate-pulse shadow-xl flex items-center justify-center">
          <!-- Optional placeholder icon -->
          <svg 
            class="w-16 h-16 text-gray-400" 
            fill="none" 
            stroke="currentColor" 
            stroke-width="1.5" 
            viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round"
              d="M3 16l4-4a3 3 0 014 0l4 4m0 0l4-4a3 3 0 014 0M7 8h.01M3 20h18a1 1 0 001-1V5a1 1 0 00-1-1H3a1 1 0 00-1 1v14a1 1 0 001 1z" />
          </svg>
        </div>
      </div>

    </div>
  </div>
</section>
